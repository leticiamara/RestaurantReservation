<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_screen"
    tools:context="com.leticia.restaurantreservation.presentation.view.activity.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_title"
        android:text="@string/login"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/size_text_title"
        android:textStyle="bold" />

    <include layout="@layout/include_user_fields" />

    <TextView
        android:id="@+id/txt_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="12dp"
        android:text="@string/create_an_account"
        android:textColor="@color/colorTextLink"
        android:textStyle="bold" />

</RelativeLayout>
